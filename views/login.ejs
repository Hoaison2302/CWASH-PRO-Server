<!------ Include the above in your HEAD tag ---------->

<div class="header">
    <img src="/images/logo.png" class="img-logoHeader">
</div>
<div class="container view">
    <div class="wrap-body">
        <div class="body-left">
            <form action="/login" method="post">
            <h3>Đăng Nhập</h3>
            <p class="sub_text">Nhập tài khoản và mật khẩu để đăng nhập hệ thống</p>
            <div class="wrap_input">
                <p class="text_login"><mark class="red">*</mark> Tài khoản</p>
                <div class="wrap_login ">
                    <input type="text" class="form-control" name="phoneNumber" placeholder="Nhập Email">
                </div>
            </div>
            <div class="wrap_input">
                <div class="wrap_pass">
                    <p class="text_pass"><mark>*</mark> Mật Khẩu</p>
                    <p class="text_forgot">Quên mật khẩu?</p>
                </div>
                <div class="wrap_password ">
                    <input type="password" name="passWord" class="form-control" >
                </div>
                <% if (err){ %>
                    <div class="alert alert-danger" role="alert">
                        <%=message%>
                    </div>
                    <% } %>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn float-right login_btn">
                </div>
            </div>
        </form>
        </div>
        <div class="body-right">
            <img src="/images/panner-login.svg" class="img-panner">
        </div>
    </div>
</div>

